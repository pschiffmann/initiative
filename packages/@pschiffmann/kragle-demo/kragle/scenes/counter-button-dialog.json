{
  "type": "@kragle/runtime/EmptyScene",
  "rootNode": "CounterBloc",
  "nodes": {
    "CounterBloc": {
      "type": "@pschiffmann/kragle-demo/CounterBloc",
      "slots": {
        "child": "Dialog"
      }
    },
    "Dialog": {
      "type": "@pschiffmann/kragle-demo/Dialog",
      "inputs": {},
      "slots": {
        "trigger": "OpenDialogButton",
        "content": "DialogContent"
      }
    },
    "OpenDialogButton": {
      "type": "@pschiffmann/kragle-demo/Button",
      "inputs": {
        "label": {
          "type": "constant",
          "value": "Open dialog"
        },
        "onPress": {
          "type": "node-output",
          "nodeId": "Dialog",
          "outputName": "open"
        }
      }
    },
    "DialogContent": {
      "type": "@pschiffmann/kragle-demo/FlexContainer",
      "inputs": {
        "flexDirection": {
          "type": "constant",
          "value": "column"
        }
      },
      "collectionSlots": {
        "child": [
          "CounterLabel",
          "IncreaseCounterButton",
          "DecreaseCounterButton",
          "ResetCounterButton"
        ]
      }
    },
    "CounterLabel": {
      "type": "@pschiffmann/kragle-demo/Typography",
      "inputs": {
        "text": {
          "type": "node-output",
          "nodeId": "CounterBloc",
          "outputName": "label"
        }
      }
    },
    "IncreaseCounterButton": {
      "type": "@pschiffmann/kragle-demo/Button",
      "inputs": {
        "label": {
          "type": "constant",
          "value": "n++"
        },
        "onPress": {
          "type": "node-output",
          "nodeId": "CounterBloc",
          "outputName": "increaseCounter"
        }
      }
    },
    "DecreaseCounterButton": {
      "type": "@pschiffmann/kragle-demo/Button",
      "inputs": {
        "label": {
          "type": "constant",
          "value": "n--"
        },
        "onPress": {
          "type": "node-output",
          "nodeId": "CounterBloc",
          "outputName": "decreaseCounter"
        }
      }
    },
    "ResetCounterButton": {
      "type": "@pschiffmann/kragle-demo/Button",
      "inputs": {
        "label": {
          "type": "constant",
          "value": "n = 0"
        },
        "onPress": {
          "type": "node-output",
          "nodeId": "CounterBloc",
          "outputName": "reset"
        }
      }
    }
  }
}
